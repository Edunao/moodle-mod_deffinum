<div class="d-flex align-items-center gap-2" title="#{{id}} - {{title}}">

    {{#is_collapsable}}
    <a data-toggle="collapse" href="#child-{{id}}" role="button" aria-expanded="true" aria-controls="#child-{{id}}" class="btn btn-icon me-1 icons-collapse-expand fheader" id="collapseElement-1">
        <span class="expanded-icon icon-no-margin p-2" title="">
            <i class="icon fa fa-chevron-down fa-fw " aria-hidden="true"></i>
        </span>
        <span class="collapsed-icon icon-no-margin p-2" title="">
            <span class="dir-rtl-hide"><i class="icon fa fa-chevron-right fa-fw " aria-hidden="true"></i></span>
            <span class="dir-ltr-hide"><i class="icon fa fa-chevron-left fa-fw " aria-hidden="true"></i></span>
        </span>
        <span class="sr-only">{{title}}</span>
    </a>
    {{/is_collapsable}}

    <div class="status-icon-container">
        {{#is_chapter}}<i class="fa fa-book mt-1"></i>{{/is_chapter}}
        {{#is_sequence}}<i class="fa fa-stream mt-1"></i>{{/is_sequence}}
        {{#is_quiz}}<i class="fa fa-question-circle mt-1"></i>{{/is_quiz}}
        {{#is_scenesGroup}}<i class="fa fa-window-restore mt-1"></i>{{/is_scenesGroup}}
        {{#is_scene}}<i class="fa fa-window-maximize mt-1"></i>{{/is_scene}}
        {{#is_component}}<i class="fa fa-window-minimize mt-1"></i>{{/is_component}}
    </div>

    <div class="completion-indicator-container d-flex align-items-center">
        <div class="completion-indicator">
            {{> deffinumreport_detailed/completion_indicator }}
        </div>
    </div>

    <div class="element-title-container d-flex gap-2 align-items-center">
        {{#has_link}}
            <a href="{{link}}" target="_blank" class="text-decoration-none element-title h5 mb-0" title="{{#str}} openresource, deffinumreport_detailed {{/str}}">
                <span class="bold">{{title}}</span>
            </a>
        {{/has_link}}
        {{^has_link}}<span class="bold element-title h5 mb-0">{{title}}</span>{{/has_link}}
    </div>

    <div class="d-flex flex-wrap gap-2 small pl-2 pr-2 bg-secondary rounded">
        {{#canviewlevel}}{{#level}}<div><strong>{{#str}} level, deffinumreport_detailed {{/str}} :</strong> {{.}}</div>{{/level}}{{/canviewlevel}}
        {{#canviewscore}}{{#scoremax}}<div><strong>{{#str}} score, deffinumreport_detailed {{/str}} :</strong> {{score}}{{#canviewscoremax}} / {{scoremax}}{{/canviewscoremax}}</div>{{/scoremax}}{{/canviewscore}}
        {{#canviewnbtry}}{{#nbtry}}<div><strong>{{#str}} attempts, deffinumreport_detailed {{/str}} :</strong> {{.}}</div>{{/nbtry}}{{/canviewnbtry}}
        {{#canviewtimespent}}{{#timespent}}<div><strong>{{#str}} timespent, deffinumreport_detailed {{/str}} :</strong> {{.}}</div>{{/timespent}}{{/canviewtimespent}}
        {{#progress}}<div><strong>{{#str}} progress, deffinumreport_detailed {{/str}} :</strong> {{.}}%</div>{{/progress}}
    </div>

</div>