<section id="detailed-progress-report" class="ed-report px-2 px-md-4 py-3">
    <h4 class="fw-bold mb-3">{{title}}</h4>

    <div class="row g-3 mb-4 summary-cards text-center">
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body py-3 d-flex flex-column justify-content-center">
                    <span class="text-muted small">{{#str}} completion, deffinumreport_detailed {{/str}}</span>
                    <div class="h4 mb-0 fw-bold text-uppercase">{{> deffinumreport_detailed/completion_indicator }}{{cmi.completion_status}}</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body py-3 d-flex flex-column justify-content-center">
                    <div class="text-muted small">{{#str}} score, deffinumreport_detailed {{/str}}</div>
                    <div class="h4 mb-0 fw-bold">{{cmi.score_raw}} / {{cmi.score_max}}</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body py-3 d-flex flex-column justify-content-center">
                    <div class="text-muted small">{{#str}} timespent, deffinumreport_detailed {{/str}}</div>
                    <div class="h4 mb-0 fw-bold">{{cmi.session_time}}</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body py-3 d-flex flex-column justify-content-center">
                    <div class="text-muted small">{{#str}} progressglobal, deffinumreport_detailed {{/str}}</div>
                    <div class="d-flex align-items-center justify-content-center gap-2">
                        <span class="h4 fw-bold mb-0">{{cmi.progress_measure}}%</span>
                        <div class="progress flex-grow-1 ml-2" style="height:0.35rem; max-width:90px;">
                            <div class="progress-bar bg-success" style="width:{{cmi.progress_measure}}%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="detailed_progress-container">
        <ul class="list-group list-group-flush">
            {{#structure}}
                {{> deffinumreport_detailed/item}}
            {{/structure}}
        </ul>
    </div>
</section>